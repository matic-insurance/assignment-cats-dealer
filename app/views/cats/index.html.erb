<div class="container-fluid">
  <h1>Pussy dealer</h1>
  <%= bootstrap_form_tag url: '/cats', remote: true do |f| %>
    <%= f.select :cat_type, options_for_select(cat_breeds, @cat_type), { label: "Choose your favorite cat breed:", wrapper: { class: 'col col-md-2' } } %>
    <%= f.select :user_location, options_for_select(cities, @user_location), { label: "Choose your location:", wrapper: { class: 'col col-md-2' } } %>
    <%= f.primary 'Search', class: "btn btn-primary" %>
  <% end %>

  <div class="row">
    <%= render partial: "cats", locals: {cats: @cats} %>
  </div>
</div>
